<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".issue.IssueFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_label_offer_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="offer:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_offer_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_label_offer_data"
            app:layout_constraintTop_toTopOf="@id/txt_label_offer_data"
            tools:text="credential offer result" />

        <TextView
            android:id="@+id/txt_label_issuable_credDef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="credDef:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_issuable_credDef" />

        <TextView
            android:id="@+id/txt_issuable_credDef"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            app:layout_constraintBottom_toTopOf="@id/txt_issuable_credReq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_label_issuable_credDef"
            app:layout_constraintTop_toBottomOf="@id/txt_offer_data"
            tools:text="credential detail data" />

        <TextView
            android:id="@+id/txt_label_issuable_credReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="credReq:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_issuable_credReq" />

        <TextView
            android:id="@+id/txt_issuable_credReq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            app:layout_constraintBottom_toTopOf="@id/txt_issuable_credMetaData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_label_issuable_credReq"
            app:layout_constraintTop_toBottomOf="@id/txt_issuable_credDef"
            tools:text="credential detail data" />

        <TextView
            android:id="@+id/txt_label_issuable_credMetaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="metaData:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_issuable_credMetaData" />

        <TextView
            android:id="@+id/txt_issuable_credMetaData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_label_issuable_credMetaData"
            app:layout_constraintTop_toBottomOf="@id/txt_issuable_credReq"
            tools:text="credential detail data" />

        <TextView
            android:id="@+id/txt_label_cred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="cred:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_issuable_cred" />

        <TextView
            android:id="@+id/txt_issuable_cred"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_label_cred"
            app:layout_constraintTop_toBottomOf="@id/txt_issuable_credMetaData"
            tools:text="credential detail data" />

        <Button
            android:id="@+id/btn_issuing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="@string/txt_issuing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>