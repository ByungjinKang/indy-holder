<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_welcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/btn_navigate_to_credential_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_navigate_to_credential_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#009000"
            android:text="@string/credential_list"
            app:layout_constraintBottom_toTopOf="@id/btn_navigate_to_issue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_navigate_to_issue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#009000"
            android:text="@string/txt_issuing"
            app:layout_constraintBottom_toTopOf="@id/btn_navigate_to_verification"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_navigate_to_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#009000"
            android:text="@string/txt_verifying"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>